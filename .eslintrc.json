{
  "plugins": ["prettier"],
  "extends": "next/core-web-vitals",
  "env": {
    "es6": true,
    "browser": true,
    "jest/globals": true
  },
  "parserOptions": {
    "sourceType": "module",
    "prettier/prettier": [
      "error",
      {
        "singleQuote": true,
        "parser": "flow"
      }
    ]
  },
  "parser": "@babel/eslint-parser",
  "rules": {
    "no-unused-vars": "warn",
    "linebreak-style": 0
  },
  "overrides": [
    {
      "files": ["**/*.test.ts"],
      "plugins": ["jest"],
      "extends": ["plugin:jest/recommended"],
      "rules": { "jest/prefer-expect-assertions": "off" }
    }
  ]
}
